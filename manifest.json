{
  "manifest_version": 3,
  "name": "One Click PDF - Webpage to PDF Converter",
  "version": "5.2",
  "description": "Convert any webpage or selected area to a high-quality vector PDF with one click. No sign-up, no watermark.",
  "permissions": ["activeTab", "debugger", "downloads"],
  "content_security_policy": {
    "extension_pages": "default-src 'self'; script-src 'self'; style-src 'self'; object-src 'none'"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PDF Mode: ON",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ]
}
